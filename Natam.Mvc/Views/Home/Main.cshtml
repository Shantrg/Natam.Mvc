                $('#mngr').append(link);
            }

        });

        function trigger_Reminder(leadId, leadType) {

            if (leadType == 2)
                app_rout.redirectToBuilding(leadId);
            if (leadType == 3)
                app_rout.redirectToProperty(leadId);
            if (leadType == 4)
                app_rout.redirectToTrans(leadId,1);
            else if (leadId>0)
                app_rout.redirectToLead(leadId);
        }
    </script>
}



