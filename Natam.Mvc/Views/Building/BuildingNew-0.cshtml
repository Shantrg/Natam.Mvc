            }
            // Validate the Form.
            $('#form').jqxValidator('validate', validationResult);

        });

        $("#form").on('validationSuccess', function () {
            //alert('validationSuccess');
            // Display the Server's Response which came as result of the Form Submit.
            $("#form-iframe").fadeIn('fast');
