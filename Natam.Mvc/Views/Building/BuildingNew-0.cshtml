        });
        $("form").submit(function (e) {

            e.preventDefault();
            var actionurl = $('#form').attr('action');
            //renderCheckList("PurposeList", "PurposeType");
            var validationResult = function (isValid) {
                if (isValid) {
                    $.ajax({
                        url: actionurl,
                        type: 'post',
                        dataType: 'json',
                        data: $('#form').serialize(),
                        success: function (data) {
                            alert(data.Message);
                            if (data.Status >= 0) {
