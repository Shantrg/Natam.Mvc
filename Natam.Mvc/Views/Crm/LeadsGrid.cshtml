                           }
                       },
                      {
                          text: 'דואר אלקטרוני', datafield: 'Email', align: 'center', cellsrenderer: function (row, datafield, value) {
                              return '<a href="mailto:' + value + '">' + value + '</a>';
                          }
                      },
