        function leads_Refresh() {
            try {
                $("#jqxgrid").jqxGrid('source').dataBind();
            }
            catch (e) {
                alert(e);
            }
        };
        function leads_Edit(id) {
            @*var accountType = '@acctype';
            NScustomers.accountDialog = accountEdit(id, accountType);*@

            app_rout.redirectToLead(id);

        }
        function leads_Delete(id) {

            if (typeof async === 'undefined') { async = true; }

            if (confirm("האם למחוק לקוח " + id)) {
                $.ajax({
                    async: async,
                    type: "POST",
                    url: "/Crm/DeleteLead",
                    data: "{ 'LeaId': '" + id + "' }",
                    contentType: "application/json; charset=utf-8",
                    //dataType: "json",
                    success: function (data) {
                        app_dialog.popMessage('לקוחות שלי', 'לקוח ' + id + 'הוסר מהמערכת ', "auto");
                        leads_Refresh();
                    },
                    error: function (e) {
                        alert(e);
                    }
                });
            }
        }

        
   

    </script>
}

