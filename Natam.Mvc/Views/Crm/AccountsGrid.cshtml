@model Pro.Models.AccountQuery
@{
    Layout = "~/Views/Shared/_View.cshtml";
    ViewBag.Title = "Buildings";
    var userInfo = @Html.Raw(Json.Encode(ViewBag.UserInfo));
    var dataModel = @Html.Raw(Json.Encode(Model));
}
@section head {

    @Scripts.Render("~/bundles/jqx")
    @Scripts.Render("~/bundles/jqxgrid")
    <script src="~/jqwidgets/jqxexpander.js"></script>
      <script type="text/javascript" src="~/jqwidgets/jqxdata.export.js"></script>
    <link rel="stylesheet" href="~/Scripts/app/app-form.css" type="text/css" />
    <style type="text/css">
        input {
            direction: rtl;
            text-align: right;
        }
    </style>
    <script src="~/Scripts/app/app-wizard.js"></script>
    <script src="~/Scripts/app/model/accounts-grid.js?ver=2018004"></script>
    <script src="~/Scripts/app/model/accounts-def.js?ver=2018004"></script>
}


@section scripts {

    <script type="text/javascript">

        var accountGridControl;
        var wizard;

        $(document).ready(function () {
            JSON.useDateParser();
            var theme = 'Arctic';
            var uinfo = { UserId: 1, UserRole: 9 };

            wizard = new app_wiztabs();
            wizard.displayStep(1);

            accountGridControl = app_accounts_grid.init(JSON.parse('@dataModel'), uinfo)

        });



    </script>
}


<div class="breadcrumbs">
    @Html.ActionLink("Home", "Index", "Home")>
    @Html.ActionLink("Main", "Main", "Home")>
    <a href="javascript:parent.history.back()">Crm</a> >
    @ViewContext.RouteData.Values["action"].ToString()
</div>


<div class="clear"></div>

<div class="global-view">
    <div class="container-box">

        <div id="wiz-container" class="container rtl">

            <div id="wiz-1" class="wiz-tab active">

                <div class="grid-wrap">
                    <div class="box-title">
                        <h3 id="hTitle"></h3>
                    </div>

                    <div style="display: inline; float: right">

                        <input value="עריכה" id="btnCustomerEdit" type="button" class="btn-default btn2" />
                        <input value="הוספה" id="btnCustomerDef" type="button" class="btn-default btn2" />
                        <input value="הסר סינון" id="btnclearfilter" type="button" class="btn-default btn2" />
                        <input value="רענון" id="btnCustomerAll" type="button" class="btn-default btn2" />

                    </div>
                    <div id="grid-iframe-window"></div>
                    <div id="jqxWidget">
                        <div id="jqxgrid" style="position:relative;z-index:1;"></div>
                        <div style="margin-top: 30px;">
                            <div id="cellbegineditevent"></div>
                            <div style="margin-top: 10px;" id="cellendeditevent"></div>
                        </div>
                    </div>
                </div>

            </div>
            <div id="wiz-2" class="wiz-tab">
                <h3 id="wiz-2-title" class="rtl"></h3>
                <div id="account-def-window" class="wiz-partial"></div>
                <div class="rtl">
                    <a id="account-def-update" class="btn-default btn7 w-60" href="#">עדכון</a>
                    <a id="account-def-cancel" class="btn-default btn7 w-60" href="#">ביטול</a>
                </div>
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">
    app_menu.activeLayoutMenu("liBuilding");
</script>
