@model IEnumerable<Pro.Data.Entities.AreaView>
@using GridMvc.Html
@{
    Layout = "~/Views/Shared/_ViewAdmin.cshtml";
    Page.Title = "Building";
    //var DB = Database.Open("cnn_Trace");
    //var Grid = new WebGrid(DB.Query("SELECT * FROM Trace_Act"));
}
@section head {
   <link rel="stylesheet" href="~/Content/css/Gridmvc.css">
   <script type="text/javascript" src="~/Scripts/plagins/gridmvc.min.js"></script>

}


<hgroup class="title">
    <h3 class="rightPan">אזורים.</h3>
</hgroup>

<div class="rightPan">
    <ul class="toolbar">
        <li>
            <input type="search" placeholder="חיפוש" /></li>
        <li><a href="#">רענון</a></li>
    </ul>
</div>
<div class="clear"></div>
<div class="global-view">
    <div class="container">

        <div dir="rtl" style="clear: both">
                        @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.Area_ID).Titled("קוד סוג");
                        columns.Add(c => c.Area_Name).Titled("שם הסביבה");
                        columns.Add(c => c.zone_name).Titled("סוג אזור");
                        columns.Add(c => c.zone_id).Titled("קוד אזור אזור");
                    }).WithPaging(15).Sortable().Filterable().WithMultipleFilters()
        </div>

    </div>
</div>
